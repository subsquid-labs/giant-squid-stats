{
  "name": "kusama-transfers",
  "private": true,
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "rm -rf lib && tsc",
    "db:migrate": "npx squid-typeorm-migration apply",
    "db:reset": ". ./scripts/reset-db.sh",
    "db:soft-reset": ". ./scripts/soft-reset-db.sh",
    "processor:start": "node lib/processor.js",
    "query-node:start": "squid-graphql-server --subscriptions --max-response-size 10000",
    "watch": "yarn chokidar \"src/**/*\" \"typegen\" -c 'yarn build'",
    "update": "npx npm-check-updates --filter /subsquid/ --upgrade && npm i -f"
  },
  "dependencies": {
    "@subsquid/archive-registry": "^1.0.18",
    "@subsquid/graphql-server": "^3.3.0",
    "@subsquid/processor-tools": "github:mckrava/processor-tools",
    "@subsquid/ss58": "^0.1.2",
    "@subsquid/substrate-processor": "^2.1.0",
    "@subsquid/typeorm-migration": "^0.1.4",
    "@subsquid/typeorm-store": "^0.2.0",
    "detect-port": "^1.5.1",
    "dotenv": "^10.0.0",
    "pg": "8.8.0",
    "piscina": "^3.2.0",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.2.0-rc.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@subsquid/substrate-metadata-explorer": "^1.0.9",
    "@subsquid/substrate-typegen": "^2.0.0",
    "@subsquid/typeorm-codegen": "^0.3.1",
    "@types/blake2b": "^2.1.0",
    "@types/detect-port": "^1.3.2",
    "@types/node": "16.11.56",
    "@types/uuid": "^9.0.0",
    "chokidar-cli": "^3.0.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-type-graphql": "^0.3.2",
    "prettier": "^2.6.2",
    "typescript": "4.8.2"
  }
}
